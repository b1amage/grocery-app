<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/box_shadow"
    android:paddingBottom="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="@drawable/rounded_sm"
        android:backgroundTint="@color/primary_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/rounded_sm"
            android:backgroundTint="@color/white"
            android:padding="16dp"
            android:id="@+id/item"
            >
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginHorizontal="8dp"
                >
                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hero"
                    android:background="@drawable/rounded"
                    android:backgroundTint="@color/primary_10"
                    android:padding="8dp"
                    app:layout_maxWidth="60dp"
                    app:layout_maxHeight="60dp"/>

            </com.google.android.flexbox.FlexboxLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3"
                android:paddingHorizontal="8dp"
                >
                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Fresh Cabbage"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/itemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Recto Grocery"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:textColor="@color/tertiary_gray"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="$10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_100"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/small_edit"
                android:padding="4dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/primary_100"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete"
                android:padding="8dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/primary_30"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>