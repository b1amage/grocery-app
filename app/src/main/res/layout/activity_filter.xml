<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FilterActivity"
    android:padding="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hello_section_filter">
        <ImageView
            android:id="@+id/home_logo_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/logo_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:id="@+id/textHello_filter"
            android:layout_toRightOf="@id/home_logo_filter"
            android:text="Hello, Daniel"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/search_section_filter"
        android:layout_below="@+id/hello_section_filter"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent">

        <EditText
            android:background="@drawable/custom_edt"
            android:backgroundTint="@color/neutral"
            android:drawableRight="@drawable/search"
            android:hint="Search"
            android:id="@+id/home_search"
            android:layout_height="wrap_content"
            android:layout_width="270dp"
            android:paddingHorizontal="28dp"
            android:paddingVertical="12dp"
            android:textSize="16dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageButton
                android:background="@drawable/rounded"
                android:backgroundTint="@color/primary_10"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/filter" />

        </LinearLayout>


    </RelativeLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_section_filter"
        android:layout_marginTop="24dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/category_tag"
            android:paddingVertical="8dp"
            android:paddingHorizontal="36dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="abc"
                android:id="@+id/cat_tag_name"
                android:textColor="@color/primary_100"
                android:textStyle="bold"/>
        </RelativeLayout>


    </com.google.android.flexbox.FlexboxLayout>

</RelativeLayout>